<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="3dp"
    >
	<ImageView android:id="@+id/ImageViewDownloadPodcastNotificationIcon"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_marginRight="10dp"
		android:contentDescription="@string/accessibility_downloadnotification"/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="3dp"
	    >
			<TextView android:id="@+id/TextViewDownloadPodcastNotificationMessage"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/omc_white"
				android:text="notification message"/>
			<ProgressBar
			    android:id="@+id/ProgressBarDownloadPodcast"
			    style="?android:attr/progressBarStyleHorizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
	</LinearLayout>

</LinearLayout>