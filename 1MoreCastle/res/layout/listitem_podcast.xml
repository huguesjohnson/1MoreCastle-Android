<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/omc_gray"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingBottom="8dp" >
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
 	>

     <ImageView
	    	android:id="@+id/listitem_podcast_featuredimage"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:scaleType="fitXY"
			android:adjustViewBounds="true" 
			android:src="@drawable/placeholder"
			android:layout_gravity="center_vertical">
		</ImageView>
        
      <Button
        android:id="@+id/listitem_podcast_delete_unpressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/listitem_podcast_featuredimage"
        android:background="@drawable/delete_nobg"
        android:visibility="invisible"
        ></Button>

        <Button
        android:id="@+id/listitem_podcast_delete_pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/listitem_podcast_featuredimage"
        android:background="@drawable/delete_bg_caption"
        android:visibility="invisible"
        > 
	</Button>
     
     <Button
    	android:id="@+id/listitem_podcast_downloadplay"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/listitem_podcast_featuredimage"
		    android:layout_centerVertical="true"
			>
	</Button>
     

   </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        

    <TextView
	        android:id="@+id/listitem_podcast_summary"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="podcast summary"
	        android:paddingLeft="4dp"
	        android:paddingRight="4dp"
	        android:textColor="@color/omc_black" 
	        android:paddingBottom="8dp">

    </TextView>
	    

    
    
	</LinearLayout>
	
     <Button
	        android:id="@+id/listitem_podcast_readmore"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:background="@color/omc_darkgray"
	        android:paddingLeft="40dp"
	        android:paddingRight="40dp"
	        android:paddingBottom="4dp"
	        android:paddingTop="4dp"
	        android:text="@string/caption_readmore"
	        android:textColor="@color/omc_white"
	        >
   
	    </Button>
    
</LinearLayout> 